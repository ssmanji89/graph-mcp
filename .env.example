# Microsoft Graph MCP Server Environment Configuration
# Copy this file to .env and fill in your values

# Microsoft Graph Application Registration
GRAPH_CLIENT_ID=your-client-id-here
GRAPH_CLIENT_SECRET=your-client-secret-here
GRAPH_TENANT_ID=your-tenant-id-here

# Authentication Configuration
GRAPH_AUTHORITY=https://login.microsoftonline.com/${GRAPH_TENANT_ID}
GRAPH_SCOPES=https://graph.microsoft.com/.default

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Development Configuration
NODE_ENV=development
PORT=3000 