{
  "name": "microsoft-graph-mcp-server",
  "version": "0.1.0",
  "description": "A Model Context Protocol (MCP) server that enables AI agents to seamlessly interact with Microsoft Graph API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepare": "husky install"
  },
  "keywords": [
    "microsoft-graph",
    "mcp",
    "model-context-protocol",
    "ai",
    "microsoft-365",
    "typescript"
  ],
  "author": "Microsoft Graph MCP Server Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/graph-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/microsoft/graph-mcp-server/issues"
  },
  "homepage": "https://github.com/microsoft/graph-mcp-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@azure/msal-node": "^2.6.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "@azure/identity": "^4.0.0",
    "axios": "^1.6.0",
    "zod": "^3.22.0",
    "winston": "^3.11.0",
    "node-cache": "^5.1.2",
    "dotenv": "^16.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-plugin-security": "^1.7.1",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.10",
    "ts-jest": "^29.1.1",
    "nock": "^13.4.0",
    "supertest": "^6.3.3",
    "@types/supertest": "^6.0.0",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0",
    "nodemon": "^3.0.2",
    "npm-run-all": "^4.1.5",
    "tsconfig-paths": "^4.2.0",
    "@types/json-schema": "^7.0.15"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "testMatch": ["**/__tests__/**/*.test.ts"]
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
} 